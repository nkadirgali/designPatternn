<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<HBox maxHeight="40.0" prefHeight="40.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.UserChooseOptionFCController">
   <children>
      <Button fx:id="fastestButton" maxWidth="70.0" mnemonicParsing="false" onAction="#choose" prefHeight="30.0" prefWidth="70.0" style="-fx-background-color: #99cc66;" styleClass="carButton" text="Fastest" translateX="-20.0">
         <HBox.margin>
            <Insets left="40.0" />
         </HBox.margin>
      </Button>
      <Button fx:id="cheapestButton" mnemonicParsing="false" onAction="#choose" prefHeight="30.0" prefWidth="70.0" style="-fx-background-color: #99cc66;" styleClass="planeButton" text="Cheapest" translateX="-10.0">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Button>
   </children>
   <padding>
      <Insets top="5.0" />
   </padding>
</HBox>
